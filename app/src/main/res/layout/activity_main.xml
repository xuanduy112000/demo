<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#393A3E">
       <TextView
           android:layout_marginTop="150px"
           android:layout_width="match_parent"
           android:layout_height="1in"
           android:background="@drawable/conner"
           android:layout_marginBottom="300px">
        </TextView>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5px">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/connerbtn"
            android:text="MC"
            app:backgroundTint="#1C1A1B"></Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="M+"
            android:background="@drawable/connerbtn"
            app:backgroundTint="#1C1A1B"
            android:layout_marginLeft="5px"></Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+"
            android:background="@drawable/connerbtn"
            app:backgroundTint="#1C1A1B"
            android:layout_marginLeft="5px"></Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="x"
            android:background="@drawable/connerbtn"
            app:backgroundTint="#1C1A1B"
            android:layout_marginLeft="5px"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5px">
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="7"
            android:background="@drawable/connerbtn"
            app:backgroundTint="#616266"></Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="8"
            android:background="@drawable/connerbtn"
            app:backgroundTint="#616266"
            android:layout_marginLeft="5px"></Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="9"
            android:background="@drawable/connerbtn"
            app:backgroundTint="#616266"
            android:layout_marginLeft="5px"></Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="-"
            android:background="@drawable/connerbtn"
            app:backgroundTint="#616266"
            android:layout_marginLeft="5px"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5px">
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="4"
            android:background="@drawable/connerbtn"
            app:backgroundTint="#616266"></Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="5"
            android:background="@drawable/connerbtn"
            app:backgroundTint="#616266"
            android:layout_marginLeft="5px"></Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="6"
            android:background="@drawable/connerbtn"
            app:backgroundTint="#616266"
            android:layout_marginLeft="5px"></Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+"
            android:background="@drawable/connerbtn"
            app:backgroundTint="#616266"
            android:layout_marginLeft="5px"></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5px">
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:background="@drawable/connerbtn"
            app:backgroundTint="#616266"></Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2"
            android:background="@drawable/connerbtn"
            app:backgroundTint="#616266"
            android:layout_marginLeft="5px"></Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="3"
            android:background="@drawable/connerbtn"
            app:backgroundTint="#616266"
            android:layout_marginLeft="5px"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:background="@drawable/connerbtn"
            app:backgroundTint="#616266"></Button>
        <Button
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="."
            android:background="@drawable/connerbtn"
            app:backgroundTint="#616266"
            android:layout_marginLeft="5px"></Button>
    </LinearLayout>



    </LinearLayout>



        <Button
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="="
            android:background="@drawable/connerbtn"
            app:backgroundTint="#616266"
            android:layout_marginLeft="5px"></Button>
    </LinearLayout>
</LinearLayout>


</LinearLayout>